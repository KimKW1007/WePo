{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@styledComponents/*": [
        "src/components/styledComponents/*"
      ],
      "@certificate/*": [
        "src/components/category/certificate/*"
      ],
      "@project/*": [
        "src/components/category/project/*"
      ],
      "@award/*": [
        "src/components/category/award/*"
      ],
      "@education/*": [
        "src/components/category/education/*"
      ],
      "@user/*": [
        "src/components/user/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@scr/*": [
        "src/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "."
  ],
}